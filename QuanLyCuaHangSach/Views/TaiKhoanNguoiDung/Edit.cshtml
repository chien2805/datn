@model QuanLyCuaHangSach.Models.TaiKhoanNguoiDung

@{
    ViewData["Title"] = "Chỉnh sửa tài khoản người dùng";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaTaiKhoan" />

    <div class="form-group">
        <label asp-for="TenDangNhap" class="control-label">Email</label>
        <input asp-for="TenDangNhap" class="form-control" />
        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MatKhau" class="control-label">Mật khẩu</label>
        <input asp-for="MatKhau" type="password" class="form-control" />
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VaiTro" class="control-label">Vai trò</label>
        <select asp-for="VaiTro" class="form-control">
            <option value="Admin">Admin</option>
            <option value="NhanVien">Nhân viên</option>
            <option value="KhachHang">Khách hàng</option>
        </select>
        <span asp-validation-for="VaiTro" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Lưu thay đổi</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
