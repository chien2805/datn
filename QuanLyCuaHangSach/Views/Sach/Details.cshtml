@model Sach

<h2>Chi tiết sách</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tiêu đề:</dt>
        <dd class="col-sm-10">@Model.TieuDe</dd>

        <dt class="col-sm-2">Tác giả:</dt>
        <dd class="col-sm-10">@Model.TacGia</dd>

        <dt class="col-sm-2">Thể loại:</dt>
        <dd class="col-sm-10">@Model.TheLoai?.TenTheLoai</dd>

        <dt class="col-sm-2">Nhà cung cấp:</dt>
        <dd class="col-sm-10">@Model.NhaCungCap?.TenNhaCungCap</dd>

        <dt class="col-sm-2">Nhà xuất bản:</dt>
        <dd class="col-sm-10">@Model.NhaXuatBan</dd>

        <dt class="col-sm-2">Năm xuất bản:</dt>
        <dd class="col-sm-10">@Model.NamXuatBan</dd>

        <dt class="col-sm-2">Số lượng tồn kho:</dt>
        <dd class="col-sm-10">@Model.SoLuongTon</dd>

        <dt class="col-sm-2">Số lượng hỏng:</dt>
        <dd class="col-sm-10">@Model.SoLuongHong</dd>

        <dt class="col-sm-2">Số lượng mất:</dt>
        <dd class="col-sm-10">@Model.SoLuongMat</dd>

        <dt class="col-sm-2">Số lượng bán:</dt>
        <dd class="col-sm-10">@Model.SoLuongBan</dd>

        <dt class="col-sm-2">Số lượng mượn:</dt>
        <dd class="col-sm-10">@Model.SoLuongMuon</dd>

        <dt class="col-sm-2">Giá:</dt>
        <dd class="col-sm-10">@Model.Gia.ToString("N0") đ</dd>

        <dt class="col-sm-2">Trạng thái:</dt>
        <dd class="col-sm-10">@Model.TrangThai</dd>

        <dt class="col-sm-2">Hình ảnh:</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <img src="@Model.HinhAnh" alt="Hình ảnh sách" style="max-width: 200px; max-height: 200px;" />
            }
            else
            {
                <span>Không có hình ảnh</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.MaSach" class="btn btn-primary">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>
