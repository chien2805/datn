    <!-- 💬 Bong bóng chat -->
    <div id="chat-bubble" onclick="toggleChat()" title="Trợ lý ảo">
        💬
    </div>

    <!-- 🗨️ Khung Chatbot -->
    <div id="chat-widget">
        <div id="chat-container">
            <div id="chat-header">
                <span>💬 Trợ Lý Ảo</span>
                <button id="close-chat" onclick="toggleChat()">×</button>
            </div>
            <div id="chatbox"></div>
            <div id="chat-input">
                <button id="micBtn" title="Nhấn giữ để nói">🎤</button>
                <input type="text" id="messageInput" placeholder="Nhập tin nhắn..." />
                <button onclick="sendMessage()">Gửi</button>
            </div>
        </div>
    </div>


    <script>
        let recognition;

        function toggleChat() {
            const widget = document.getElementById("chat-widget");
            const bubble = document.getElementById("chat-bubble");

            if (widget.style.display === "none" || widget.style.display === "") {
                widget.style.display = "flex";
                bubble.style.display = "none";
            } else {
                widget.style.display = "none";
                bubble.style.display = "flex";
            }
        }

        function appendMessage(sender, text) {
            const chat = document.getElementById("chatbox");
            const messageDiv = document.createElement("div");
            messageDiv.classList.add("message");
            messageDiv.classList.add(sender === "Bạn" ? "user" : "bot");
            messageDiv.innerHTML = text.replace(/\n/g, "<br>");
            chat.appendChild(messageDiv);
            chat.scrollTop = chat.scrollHeight;
        }

        function sendMessage() {
            const input = document.getElementById("messageInput");
            const text = input.value.trim();
            if (!text) return;

            appendMessage("Bạn", text);
            input.value = "";

            fetch(`/Chatbot/GetResponse?userMessage=${encodeURIComponent(text)}`)
                .then(response => response.text())
                .then(reply => {
                    appendMessage("Bot", reply);
                })
                .catch(error => {
                    appendMessage("Bot", "Xin lỗi, có lỗi xảy ra.");
                    console.error(error);
                });
        }

        // Khởi tạo nhận diện giọng nói
        if ('webkitSpeechRecognition' in window) {
            recognition = new webkitSpeechRecognition();
            recognition.lang = 'vi-VN';
            recognition.continuous = false;
            recognition.interimResults = false;

            recognition.onresult = function(event) {
                const transcript = event.results[0][0].transcript;
                document.getElementById("messageInput").value = transcript;
                sendMessage();
            };

            recognition.onerror = function(event) {
                console.error("Speech recognition error:", event.error);
            };
        } else {
            alert("Trình duyệt không hỗ trợ nhận diện giọng nói.");
        }

        // Gán sự kiện nhấn giữ mic
        document.addEventListener("DOMContentLoaded", () => {
            document.getElementById("chat-bubble").style.display = "flex";
            document.getElementById("chat-widget").style.display = "none";

        const micBtn = document.getElementById("micBtn");

        micBtn.addEventListener("mousedown", () => {
            if (recognition) {
                recognition.start();
                micBtn.classList.add("listening");
                micBtn.textContent = "🎙️";
            }
        });

        micBtn.addEventListener("mouseup", () => {
            if (recognition) {
                recognition.stop();
                micBtn.classList.remove("listening");
                micBtn.textContent = "🎤";
            }
        });

        micBtn.addEventListener("mouseleave", () => {
            if (recognition) {
                recognition.stop();
                micBtn.classList.remove("listening");
                micBtn.textContent = "🎤";
            }
        });


            // Gửi tin nhắn khi nhấn Enter
            document.getElementById("messageInput").addEventListener("keydown", function (e) {
                if (e.key === "Enter") {
                    sendMessage();
                }
            });
        });
    </script>
