<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyCuaHangSach</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuanLyCuaHangSach.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    @{
        var userRole = Context.Session.GetString("UserRole"); // Vai trò: "Admin" hoặc "KhachHang"
        var isLoggedIn = Context.Session.GetString("UserEmail") != null; // Kiểm tra đã đăng nhập chưa
    }
    <!-- Hiển thị thông báo từ TempData -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    <header style="background-color: #2f855a; height: 50px;" class="text-white">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark h-100 p-0">
            <div class="container-fluid d-flex justify-content-between align-items-center h-100 flex-nowrap">
                <!-- Bên trái: Logo + Menu -->
                <div class="d-flex align-items-center gap-4 h-100">
                    <a class="navbar-brand text-white mb-0 h-100 d-flex align-items-center" asp-area="" asp-controller="Sach" asp-action="Index">
                        QuanLyCuaHangSach
                    </a>

                    @if (userRole != "Admin")
                    {
                        <a class="text-white text-decoration-none d-flex align-items-center h-100" asp-controller="TrangChu" asp-action="Index">🏠 Trang chủ</a>
                        <a class="text-white text-decoration-none d-flex align-items-center h-100" asp-controller="TrangChu" asp-action="GioiThieu">Giới thiệu</a>
                        <a class="text-white text-decoration-none d-flex align-items-center h-100" asp-controller="TrangChu" asp-action="LienHe">Liên hệ</a>
                    }
                </div>

                <!-- Bên phải: Giỏ hàng + Đăng nhập/Đăng ký hoặc Xin chào -->
                @if (userRole != "Admin")
                {
                    <div class="d-flex align-items-center gap-3 h-100">
                        <button type="button" class="btn btn-outline-light position-relative d-flex align-items-center" data-bs-toggle="offcanvas" data-bs-target="#gioHangModal">
                            🛒
                            <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none">0</span>
                        </button>

                        @if (!isLoggedIn)
                        {
                            <a href="#" class="text-white text-decoration-none d-flex align-items-center h-100" onclick="showRegisterModal()">
                                <i class="fa-solid fa-user-plus me-1"></i> Đăng ký
                            </a>
                            <a href="#" class="text-white text-decoration-none d-flex align-items-center h-100" onclick="showLoginModal()">
                                <i class="fa-solid fa-sign-in-alt me-1"></i> Đăng nhập
                            </a>
                        }
                        else
                        {
                            <div class="position-relative d-flex align-items-center h-100" onmouseover="showUserOptions()" onmouseout="hideUserOptions()">
                                <span class="text-white" style="cursor: pointer;">
                                    <i class="fa-solid fa-user"></i> Xin chào, @(string.IsNullOrEmpty(Context.Session.GetString("HoTen")) ? Context.Session.GetString("UserEmail") : Context.Session.GetString("HoTen"))
                                </span>
                                <div id="userOptions" style="display: none; position: absolute; top: 100%; right: 0; background: white; color: black; border: 1px solid #ccc; border-radius: 5px; z-index: 1000;">
                                    <a href="#" class="nav-link text-dark" data-bs-toggle="modal" data-bs-target="#thongTinTaiKhoanModal">
                                        <i class="fa-solid fa-id-card"></i> Thông tin tài khoản
                                    </a>
                                    <a asp-controller="LichSu" asp-action="Index" class="nav-link text-dark">
                                        <i class="fa-solid fa-clock-rotate-left"></i> Lịch sử giao dịch
                                    </a>
                                    <form id="logoutForm" asp-controller="DangNhap" asp-action="Logout" method="post" class="m-2">
                                        <button type="submit" class="btn btn-danger btn-sm w-100">🚪 Đăng xuất</button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </nav>
    </header>




    @if (userRole == "Admin")
    {
        <div class="d-flex">
            <div class="admin-sidebar p-3 vh-100">
                <h4 class="text-center admin-title">📋 Quản lý</h4>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link" asp-controller="TrangChu" asp-action="Admin">Tổng quan</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="PhieuDatTruoc" asp-action="Index">📚 Danh sách mượn</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Sach" asp-action="Index">📖 Sách</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="TheLoai" asp-action="Index">🎭 Thể loại</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="NhaCungCap" asp-action="Index">🏢 Nhà cung cấp</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="TaiKhoanNguoiDung" asp-action="Index">👤 Tài khoản</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="HoaDonBan" asp-action="Index">📜 Hóa đơn</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="ThongKe" asp-action="Index"><i class="fas fa-chart-pie me-2"></i> Thống kê</a></li>
                </ul>
                <form id="logoutForm" asp-controller="DangNhap" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-logout mt-4">🚪 Đăng xuất</button>
                </form>
            </div>

            <div class="admin-content flex-grow-1">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    }

    else
    {
        <!-- Trang chủ với padding 2 bên là 50px -->
        <div class="container home-page">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - QuanLyCuaHangSach - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Modal Đăng nhập -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Đăng nhập</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="closeLoginModal()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="loginForm" method="post">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" name="email" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Mật khẩu:</label>
                            <input type="password" class="form-control" name="password" required>
                        </div>
                        <div id="errorMessage" class="text-danger"></div> <!-- Hiển thị lỗi ở đây -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="closeLoginModal()">Huỷ</button>
                            <button type="submit" class="btn btn-primary">Đăng nhập</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Đăng ký -->
    <div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="registerModalLabel">Đăng ký</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="closeRegisterModal()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="registerForm" method="post" action="/DangKi/DangKy">
                        @Html.AntiForgeryToken() <!-- Thêm dòng này vào để bảo vệ CSRF -->
                        <div class="form-group">
                            <label for="TenDangNhap">Email:</label>
                            <input type="email" class="form-control" name="TenDangNhap" required>
                            <span id="emailError" class="text-danger"></span> <!-- Thông báo lỗi email -->
                        </div>
                        <div class="form-group">
                            <label for="MatKhau">Mật khẩu:</label>
                            <input type="password" class="form-control" name="MatKhau" required>
                        </div>
                        <div class="form-group">
                            <label for="XacNhanMatKhau">Xác nhận mật khẩu:</label>
                            <input type="password" class="form-control" name="XacNhanMatKhau" id="XacNhanMatKhau" required />
                            <span id="xacNhanMatKhauError" class="text-danger"></span>
                        </div>
                        <div class="modal-footer">
                            <!-- Nút huỷ (đóng modal đăng ký) -->
                            <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="closeRegisterModal()">Huỷ</button>
                            <button type="submit" class="btn btn-primary">Đăng ký</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Đăng ký thành công -->
    <div class="modal fade" id="registerSuccessModal" tabindex="-1" role="dialog" aria-labelledby="registerSuccessModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="registerSuccessModalLabel">Đăng ký thành công</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="closeRegisterSuccessModal()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn đã đăng ký thành công. Bạn có muốn đăng nhập ngay không?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="closeRegisterSuccessModal()">Đóng</button>
                    <button type="button" class="btn btn-primary" onclick="openLoginModal()">Đăng nhập</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Script mở modal -->
    <script>
                // Hàm để mở modal Đăng ký
        function showRegisterModal() {
            $('#registerModal').modal('show');
        }


        // Hàm để đóng modal Đăng ký
        function closeRegisterModal() {
            $('#registerModal').modal('hide');
        }
        // Hàm để mở modal Đăng ký thành công
        function showRegisterSuccessModal() {
            $('#registerSuccessModal').modal('show');
        }

        // Hàm để đóng modal Đăng ký thành công
        function closeRegisterSuccessModal() {
            $('#registerSuccessModal').modal('hide');
        }

            // ✅ Hàm xử lý form đăng ký
        $(document).ready(function () {
            $('#registerForm').submit(function (event) {
                event.preventDefault(); // Ngăn form submit truyền thống

                // 🚫 Xóa các lỗi cũ trước khi gửi mới
                $('#emailError').text('');
                $('#xacNhanMatKhauError').text('');

                $.ajax({
                    url: '/DangKi/DangKy',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            showRegisterSuccessModal(); // ✅ Hiển thị modal đăng ký thành công
                            closeRegisterModal();       // ✅ Đóng modal đăng ký
                            $('#registerForm')[0].reset(); // ✅ Reset lại form
                        } else {
                            // ❌ Trường hợp Email đã sử dụng
                            if (response.message === "Email đã được sử dụng") {
                                $('#emailError').text('Email đã được sử dụng');
                            }

                            // ❌ Hiển thị lỗi xác nhận mật khẩu không khớp (nếu có)
                            if (response.errors) {
                                response.errors.forEach(function (err) {
                                    if (err.includes("xác nhận")) {
                                        $('#xacNhanMatKhauError').text(err);
                                    }
                                });
                            }
                        }
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi đăng ký');
                    }
                });
            });
        });
                // Hàm mở modal Đăng nhập khi bấm Đăng nhập
        function openLoginModal() {
            // Đóng modal Đăng ký thành công
            $('#registerSuccessModal').modal('hide');
            // Mở modal Đăng nhập
            $('#loginModal').modal('show');
        }
                // Kiểm tra nếu có lỗi và mở modal
        $(document).ready(function () {
            $('#loginForm').submit(function (event) {
                event.preventDefault(); // Ngừng gửi form theo cách mặc định

                // Gửi AJAX request để đăng nhập
                $.ajax({
                    url: '/DangNhap/Login',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            // Nếu đăng nhập thành công, chuyển hướng người dùng
                            window.location.href = response.redirectUrl;
                        } else {
                            // Nếu có lỗi, hiển thị thông báo lỗi trong modal
                            $('#errorMessage').text(response.message); // Hiển thị lỗi trong modal
                        }
                    },
                    error: function () {
                        $('#errorMessage').text('Có lỗi xảy ra khi đăng nhập.');
                    }
                });
            });
        });
    </script>


    <script>
        function showLoginModal() {
            $('#loginModal').modal('show');
        }
    </script>
    <!-- Script mở & đóng modal -->
    <script>
        function showLoginModal() {
            $('#loginModal').modal('show');
        }

        function closeLoginModal() {
            $('#loginModal').modal('hide');
        }
    </script>
    <script>
        // Hiển thị nút đăng xuất
        function showLogoutButton() {
            document.getElementById('logoutForm').style.display = 'block';
        }

        // Ẩn nút đăng xuất
        function hideLogoutButton() {
            document.getElementById('logoutForm').style.display = 'none';
        }
    </script>

    <!-- Modal hiển thị thông tin tài khoản -->
    <!-- Modal hiển thị thông tin tài khoản -->
    <div class="modal fade" id="thongTinTaiKhoanModal" tabindex="-1" aria-labelledby="thongTinTaiKhoanModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="thongTinTaiKhoanModalLabel">Thông tin tài khoản</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Họ tên:</strong> @Context.Session.GetString("HoTen")</p>
                    <p><strong>Email:</strong> @Context.Session.GetString("UserEmail")</p>
                    <p><strong>Số điện thoại:</strong> @Context.Session.GetString("SoDienThoai")</p>
                    <p><strong>Địa chỉ:</strong> @Context.Session.GetString("DiaChi")</p>
                    <div class="text-center">
                        <img src="@Context.Session.GetString("AnhDaiDien")" alt="Ảnh đại diện" class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover;">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="switchToEditModal()">Chỉnh sửa</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal chỉnh sửa thông tin tài khoản -->
    <div class="modal fade" id="chinhSuaTaiKhoanModal" tabindex="-1" aria-labelledby="chinhSuaTaiKhoanModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="chinhSuaTaiKhoanModalLabel">
                        <button type="button" class="btn btn-light me-2" onclick="switchToInfoModal()">&lt;</button>
                        Chỉnh sửa thông tin tài khoản
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" action="/ThongTinNguoiDung/Edit">
                    <input type="hidden" name="MaTaiKhoan" value="@Context.Session.GetInt32("MaTaiKhoan")" /> <!-- Thêm dòng này -->

                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Họ tên:</label>
                            <input type="text" class="form-control" name="HoTen" value="@Context.Session.GetString("HoTen")">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email:</label>
                            <input type="email" class="form-control" name="Email" value="@Context.Session.GetString("UserEmail")" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Số điện thoại:</label>
                            <input type="text" class="form-control" name="SoDienThoai" value="@Context.Session.GetString("SoDienThoai")">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Địa chỉ:</label>
                            <input type="text" class="form-control" name="DiaChi" value="@Context.Session.GetString("DiaChi")">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ảnh đại diện (URL):</label>
                            <input type="text" class="form-control" name="AnhDaiDien" value="@Context.Session.GetString("AnhDaiDien")">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Lưu thay đổi</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="closeEditModal()">Hủy</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
            function closeEditModal() {
            var editModal = bootstrap.Modal.getInstance(document.getElementById('chinhSuaTaiKhoanModal'));
            if (editModal) {
                editModal.hide();
            }

            // Nếu cần: Xử lý thủ công backdrop nếu Bootstrap không remove
            const backdrop = document.querySelector('.modal-backdrop');
            if (backdrop) backdrop.remove();

            document.body.classList.remove('modal-open');
            document.body.style = '';
        }
        function switchToEditModal() {
            var infoModalEl = document.getElementById('thongTinTaiKhoanModal');
            var infoModal = bootstrap.Modal.getInstance(infoModalEl);
            infoModalEl.addEventListener('hidden.bs.modal', function () {
                var editModal = new bootstrap.Modal(document.getElementById('chinhSuaTaiKhoanModal'));
                editModal.show();
            }, { once: true }); // đảm bảo chỉ chạy 1 lần
            infoModal.hide();
        }

        function switchToInfoModal() {
            var editModalEl = document.getElementById('chinhSuaTaiKhoanModal');
            var editModal = bootstrap.Modal.getInstance(editModalEl);
            editModalEl.addEventListener('hidden.bs.modal', function () {
                var infoModal = new bootstrap.Modal(document.getElementById('thongTinTaiKhoanModal'));
                infoModal.show();
            }, { once: true }); // đảm bảo chỉ chạy 1 lần
            editModal.hide();
        }
    </script>

    <script>
        function showUserOptions() {
            document.getElementById('userOptions').style.display = 'block';
        }

        function hideUserOptions() {
            document.getElementById('userOptions').style.display = 'none';
        }
    </script>


    <!-- Modal Giỏ Hàng -->
    <!-- Offcanvas giỏ hàng -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="gioHangModal" aria-labelledby="gioHangModalLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="gioHangModalLabel">Giỏ hàng</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul id="cart-items" class="list-group"></ul>

            <!-- Tổng tiền -->
            <div class="mt-3 text-end">
                <b>Tổng tiền: <span id="tong-tien">0</span>đ</b>
            </div>

            <!-- Nút Xóa giỏ hàng & Thanh toán -->
            <button class="btn btn-danger mt-2 w-100" onclick="xoaGioHang()">Xóa giỏ hàng</button>
            <button class="btn btn-success mt-2 w-100" onclick="thanhToan()">Thanh toán</button>
        </div>
    </div>
    <!-- Toast thông báo -->
    <div id="toast-container" class="position-fixed top-0 end-0 p-3" style="z-index: 1050;">
        <div id="toast-message" class="toast align-items-center bg-success text-white border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body fw-bold">
                    ✅ Sản phẩm đã được thêm vào giỏ hàng!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script>
        function themVaoGio(maSach) {
            $.post("/GioHang/ThemVaoGio", { maSach: maSach }, function (response) {
                if (response.success) {
                    capNhatSoLuongGioHang();
                    hienThiToast();
                }
            });
        }

        function hienThiToast() {
            let toastElement = new bootstrap.Toast(document.getElementById("toast-message"));
            toastElement.show();
            setTimeout(() => toastElement.hide(), 1000);

        }
        function capNhatSoLuong(maSach, soLuongThayDoi) {
            $.post("/GioHang/CapNhatSoLuong", { maSach: maSach, soLuongThayDoi: soLuongThayDoi }, function (response) {
                if (response.success) {
                    capNhatSoLuongGioHang();
                }
            });
        }

        function capNhatSoLuongGioHang() {
            $.get("/GioHang/GetGioHangJson", function (gioHang) {
                let totalItems = gioHang.chiTietGioHangs.reduce((sum, item) => sum + item.soLuong, 0);
                $("#cart-count").text(totalItems).toggleClass("d-none", totalItems === 0);
                hienThiGioHang(gioHang);
            });
        }

        function hienThiGioHang(gioHang) {
            let html = "";
            let tongTien = 0;

