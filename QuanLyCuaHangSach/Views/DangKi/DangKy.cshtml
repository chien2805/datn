@model QuanLyCuaHangSach.Models.TaiKhoanNguoiDung

<h2>Đăng ký tài khoản</h2>

<form asp-action="DangKy" method="post">
    <div class="form-group">
        <label asp-for="TenDangNhap">Email:</label>
        <input asp-for="TenDangNhap" class="form-control" />
        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MatKhau">Mật khẩu:</label>
        <input asp-for="MatKhau" type="password" class="form-control" />
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Đăng ký</button>
</form>

<a href="@Url.Action("Index", "DangKi")" class="btn btn-secondary">Quay lại danh sách</a>
