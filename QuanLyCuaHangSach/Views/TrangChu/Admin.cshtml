@* Thêm FontAwesome để có icon *@
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

@{
    var sachBanChay = ViewBag.SachBanChay as List<QuanLyCuaHangSach.Models.Sach>;
}

<h2 style="text-align:center; font-size:2rem; color:#333; margin-bottom:30px;">
    Tổng quan
</h2>

<div style="display: flex; flex-direction: column; align-items: center;">

    <!-- Hàng đầu: 2 item -->
    <div style="display: flex; justify-content: center; flex-wrap: wrap; margin-bottom: 20px;">
        <!-- Tổng số phiếu mượn -->
        <div style="
            background:#e3f2fd;
            border:1px solid #90caf9;
            border-radius:8px;
            width:180px;
            margin:20px;
            padding:20px;
            text-align:center;
        ">
            <i class="fa-solid fa-book-reader" style="font-size:2rem; color:#1e88e5; margin-bottom:10px;"></i>
            <div style="font-size:1rem; color:#1e88e5; margin-bottom:5px; font-weight:bold;">
                Tổng số phiếu mượn
            </div>
            <div style="font-size:1.4rem; font-weight:bold; color:#1e88e5;">
                @ViewBag.TongPhieuMuon
            </div>
        </div>

        <!-- Tổng số sách -->
        <div style="
            background:#e8f5e9;
            border:1px solid #a5d6a7;
            border-radius:8px;
            width:180px;
            margin:20px;
            padding:20px;
            text-align:center;
        ">
            <i class="fa-solid fa-book" style="font-size:2rem; color:#43a047; margin-bottom:10px;"></i>
            <div style="font-size:1rem; color:#43a047; margin-bottom:5px; font-weight:bold;">
                Tổng số sách
            </div>
            <div style="font-size:1.4rem; font-weight:bold; color:#43a047;">
                @ViewBag.TongSach
            </div>
        </div>
    </div>

    <!-- Hàng thứ hai: 3 item -->
    <div style="display: flex; justify-content: center; flex-wrap: wrap;">
        <!-- Tổng số thể loại -->
        <div style="
            background:#fffde7;
            border:1px solid #fff59d;
            border-radius:8px;
            width:180px;
            margin:20px;
            padding:20px;
            text-align:center;
        ">
            <i class="fa-solid fa-tags" style="font-size:2rem; color:#fdd835; margin-bottom:10px;"></i>
            <div style="font-size:1rem; color:#fdd835; margin-bottom:5px; font-weight:bold;">
                Tổng số thể loại
            </div>
            <div style="font-size:1.4rem; font-weight:bold; color:#fdd835;">
                @ViewBag.TongTheLoai
            </div>
        </div>

        <!-- Tổng số tài khoản -->
        <div style="
            background:#f3e5f5;
            border:1px solid #ce93d8;
            border-radius:8px;
            width:180px;
            margin:20px;
            padding:20px;
            text-align:center;
        ">
            <i class="fa-solid fa-user" style="font-size:2rem; color:#8e24aa; margin-bottom:10px;"></i>
            <div style="font-size:1rem; color:#8e24aa; margin-bottom:5px; font-weight:bold;">
                Tổng số tài khoản
            </div>
            <div style="font-size:1.4rem; font-weight:bold; color:#8e24aa;">
                @ViewBag.TongTaiKhoan
            </div>
        </div>

        <!-- Tổng số hóa đơn bán -->
        <div style="
            background:#ffebee;
            border:1px solid #ef9a9a;
            border-radius:8px;
            width:180px;
            margin:20px;
            padding:20px;
            text-align:center;
        ">
            <i class="fa-solid fa-file-invoice-dollar" style="font-size:2rem; color:#e53935; margin-bottom:10px;"></i>
            <div style="font-size:1rem; color:#e53935; margin-bottom:5px; font-weight:bold;">
                Tổng số hóa đơn bán
            </div>
            <div style="font-size:1.4rem; font-weight:bold; color:#e53935;">
                @ViewBag.TongHoaDon
            </div>
        </div>
    </div>
</div>
