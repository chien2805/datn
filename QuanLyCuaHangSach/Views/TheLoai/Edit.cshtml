/* Edit.cshtml - Sửa thể loại */
@model TheLoai
<h2>Sửa thể loại</h2>
<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="MaTheLoai" />
    <div class="form-group">
        <label asp-for="TenTheLoai">Tên thể loại</label>
        <input asp-for="TenTheLoai" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MoTa">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>