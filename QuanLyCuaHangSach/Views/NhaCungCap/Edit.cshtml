@model NhaCungCap

<h2>Chỉnh Sửa Nhà Cung Cấp</h2>
<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="MaNhaCungCap" />
    <div class="form-group">
        <label for="TenNhaCungCap">Tên nhà cung cấp</label>
        <input asp-for="TenNhaCungCap" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ThongTinLienHe">Thông tin liên hệ</label>
        <input asp-for="ThongTinLienHe" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
</form>
