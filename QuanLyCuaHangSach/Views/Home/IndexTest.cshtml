<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>
        Dashboard
    </title>
    <script src="https://cdn.tailwindcss.com">
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <div class="flex">
        <!-- Sidebar -->
        <div class="w-64 bg-gray-800 h-screen">
            <div class="p-4 text-white text-2xl font-bold">
                COREUI
            </div>
            <ul class="mt-6">
                <li class="text-gray-300 hover:bg-gray-700 hover:text-white p-3">
                    <i class="fas fa-tachometer-alt mr-2">
                    </i>
                    Dashboard
                </li>
                <li class="text-gray-300 hover:bg-gray-700 hover:text-white p-3">
                    <i class="fas fa-puzzle-piece mr-2">
                    </i>
                    Components
                    <span class="bg-blue-500 text-white text-xs rounded-full px-2 py-1 ml-2">
                        NEW
                    </span>
                </li>
                <li class="text-gray-300 hover:bg-gray-700 hover:text-white p-3">
                    <i class="fas fa-icons mr-2">
                    </i>
                    Icons
                </li>
                <li class="text-gray-300 hover:bg-gray-700 hover:text-white p-3">
                    <i class="fas fa-th-large mr-2">
                    </i>
                    Widgets
                    <span class="bg-blue-500 text-white text-xs rounded-full px-2 py-1 ml-2">
                        NEW
                    </span>
                </li>
                <li class="text-gray-300 hover:bg-gray-700 hover:text-white p-3">
                    <i class="fas fa-chart-bar mr-2">
                    </i>
                    Charts
                </li>
                <li class="text-gray-300 hover:bg-gray-700 hover:text-white p-3">
                    <i class="fas fa-file-alt mr-2">
                    </i>
                    Pages
                </li>
            </ul>
        </div>
        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <!-- Header -->
            <div class="flex justify-between items-center bg-white p-4 shadow">
                <div class="flex items-center">
                    <span class="text-gray-600 text-sm">
                        Home / Admin / Dashboard
                    </span>
                </div>
                <div class="flex items-center">
                    <i class="fas fa-bell text-gray-600 mr-4">
                    </i>
                    <i class="fas fa-user-circle text-gray-600 mr-4">
                    </i>
                    <span class="text-gray-600">
                        admin
                    </span>
                </div>
            </div>
            <!-- Dashboard Content -->
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <div class="bg-blue-500 text-white p-4 rounded shadow">
                        <div class="flex justify-between items-center">
                            <div>
                                <div class="text-2xl">
                                    
                                </div>
                                <div class="text-sm">
                                   Số lượng người dùng
                                </div>
                            </div>
                            <i class="fas fa-chart-line text-3xl">
                            </i>
                        </div>
                    </div>
                    <div class="bg-teal-500 text-white p-4 rounded shadow">
                        <div class="flex justify-between items-center">
                            <div>
                                <div class="text-2xl">
                                    9,823
                                </div>
                                <div class="text-sm">
                                    Members online
                                </div>
                            </div>
                            <i class="fas fa-chart-line text-3xl">
                            </i>
                        </div>
                    </div>
                    <div class="bg-yellow-500 text-white p-4 rounded shadow">
                        <div class="flex justify-between items-center">
                            <div>
                                <div class="text-2xl">
                                    9,823
                                </div>
                                <div class="text-sm">
                                    Members online
                                </div>
                            </div>
                            <i class="fas fa-chart-line text-3xl">
                            </i>
                        </div>
                    </div>
                    <div class="bg-red-500 text-white p-4 rounded shadow">
                        <div class="flex justify-between items-center">
                            <div>
                                <div class="text-2xl">
                                    9,823
                                </div>
                                <div class="text-sm">
                                    Members online
                                </div>
                            </div>
                            <i class="fas fa-chart-bar text-3xl">
                            </i>
                        </div>
                    </div>
                </div>
                <div class="bg-white p-6 mt-6 rounded shadow">
                    <div class="flex justify-between items-center mb-4">
                        <div class="text-xl">
                            Traffic
                        </div>
                        <div class="flex space-x-2">
                            <button class="bg-gray-200 text-gray-600 px-3 py-1 rounded">
                                Day
                            </button>
                            <button class="bg-gray-200 text-gray-600 px-3 py-1 rounded">
                                Month
                            </button>
                            <button class="bg-gray-200 text-gray-600 px-3 py-1 rounded">
                                Year
                            </button>
                        </div>
                    </div>
                    <img alt="Traffic chart showing data trends over time" height="300" src="https://storage.googleapis.com/a1aa/image/4b_eDSsnoZdXyD4DVPMBxGfjrcX4FEr3J_BK4Rp15PM.jpg" width="600" />
                </div>
            </div>
        </div>
    </div>
</body>
</html>
